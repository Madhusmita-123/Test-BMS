@model BMS.Models.RevenueProposalByUnitModel
@{
    ViewBag.Title = "Sec_Lvl_RevenueProposalByUnit";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .ks {
        max-width: 100% !important;
        width: 100%;
        padding: 4px 20px;
        margin: 8px 0;
